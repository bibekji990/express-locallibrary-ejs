<h1><%=title%></h1>
<form method="POST" action="">
  <div class="form-group">
    <label for="title">Title:</label>
    <input class="form-control" id="title" type="text" placeholder="Name of book" name="title" required="true" value="<%="undefined" === typeof book ? "" : book["title"];%>" >
  </div>
  
  <div class="form-group">
  <label for="author">Author:</label>
  <select class="form-control" id="author" type="select" placeholder="Select author" name="author" required="true">
     <% for(let i = 0; i < authors.length; i++){ %>
        <% if (typeof book != "undefined") { %>

    <option value="<%= authors[i]["_id"]%>" selected="<% authors[i]["_id"].toString() == book["author"]["_id"] || authors[i]["_id"].toString() == book["author"] ? "selected" : false %>" <%= authors[i]["name"]%></option>

  <% }

  else { %>

    <option value="<%=authors[i]["_id"]%>"> <%= authors[i]["name"]%> </option>

 <% } %>
 <% } %>
  </select>
</div>
  
  
  <div class="form-group">
    <label for="summary">Summary:</label>
    <input class="form-control" id="summary" type="textarea" placeholder="Summary" name="summary" value="<%=("undefined" === typeof book) ? "" : book["summary"];%>" required="true">
  </div>
  <div class="form-group">
    <label for="isbn">ISBN:</label>
    <input class="form-control" id="isbn" type="text" placeholder="ISBN13" name="isbn" value="<%=("undefined" === typeof book) ? "" : book["isbn"];%>" required="true">
  </div>
  <div class="form-group">
    <label>Genre:</label>
   
    <div>
    <% for(let genre = 0; genre < genres.length; genre++ ) { %>
          <div style="display: inline; padding-right:10px">
  <input class="checkbox-input" type="checkbox" name="genre" id="<%=genres[genre]["_id"]%>" value="<%=genres[genre]["_id"]%>" checked="<%=genres[genre]["checked"]%>">
  <label for="<%=genres[genre]["_id"]%>"> <%=genres[genre]["name"]%> </label>
      </div>
    <% } %>
   </div>
  </div>
  <button class="btn btn-primary" type="submit">Submit</button>
</form>
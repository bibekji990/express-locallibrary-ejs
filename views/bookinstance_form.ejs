<h1></h1>
<form method="POST" action="">
  <div class="form-group">
    <label for="book">Book:</label>
    <select class="form-control" id="book" type="select" placeholder="Select book" name="book" required="true">

<%  for(let i = 0; i < book_list.length; i++) {  %>
             <% if(typeof bookinstance !== "undefined") { %>
      <option value="<%=book_list[i]["_id"]%>"> <%=book_list[i]["title"]%></option>    
         <% }
   else { %>
<option  value="<%=book_list[i]["_id"]%>"> <%=book_list[i]["title"]%> </option>
<% } %>
<%}%>


</select>
  </div>
  
 <div class="form-group">
    <label for="imprint">Imprint:</label>
    <input class="form-control" id="imprint" type="text" placeholder="Publisher and date information" name="imprint" required="true" value="<%= "undefined"=== typeof bookinstance ? '' : bookinstance["imprint"]%>">
  </div>
  
 
  <div class="form-group">
    <label for="due_back">Date when book available:</label>
    <input class="form-control" id="due_back" type="date" name="due_back" value="<%="undefined" === typeof bookinstance ? '' : bookinstance["due_back"]%>">
  </div>
  
 <div class="form-group">
    <label for="status">Status:</label>
    <select class="form-control" id="status" type="select" placeholder="Select status" name="status" required="true">
      <option value="Maintenance">Maintenance</option>
      <option value="Available">Available</option>
      <option value="Loaned">Loaned</option>
      <option value="Reserved">Reserved</option>
    </select>
  </div>
  <button class="btn btn-primary" type="submit">Submit</button>
</form>